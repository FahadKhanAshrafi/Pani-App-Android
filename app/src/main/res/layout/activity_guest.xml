<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="15dp"
    tools:context="com.example.fahadkhanashrafi.paniapp.Guest">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round">
        <ImageView
            android:id="@+id/canImg"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/cann"
            android:scaleType="fitCenter"
            android:alpha="1"/>
        <LinearLayout
            android:background="@color/transparent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="20 Liter"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="35dp"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:id="@+id/canRate"
                android:text="Rs:200/="
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:textSize="25dp"
                android:singleLine="true"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>


        <Button
            android:id="@+id/btn20L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orderbtn"
            android:layout_alignParentRight="true"
            android:textColor="@color/icons"
            android:layout_below="@id/canImg"
            android:textAlignment="center"
            android:text="Order Now"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="10dp"/>

    </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round">
            <ImageView
                android:id="@id/canImg"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/cann"
                android:scaleType="fitCenter"
                android:alpha="1"/>
            <LinearLayout
                android:background="@color/transparent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="12 Liter"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="35dp"
                    android:textAlignment="center">
                </TextView>
                <TextView
                    android:id="@id/canRate"
                    android:text="Rs:150/="
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="25dp"
                    android:singleLine="true"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>


            <Button
                android:id="@+id/btn12L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orderbtn"
                android:layout_alignParentRight="true"
                android:textColor="@color/icons"
                android:layout_below="@id/canImg"
                android:textAlignment="center"
                android:text="Order Now"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="10dp"/>

        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round">
            <ImageView
                android:id="@id/canImg"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/cann"
                android:scaleType="fitCenter"
                android:alpha="1"/>
            <LinearLayout
                android:background="@color/transparent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="6 Liter"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="35dp"
                    android:textAlignment="center">
                </TextView>
                <TextView
                    android:id="@id/canRate"
                    android:text="Rs:75/="
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="25dp"
                    android:singleLine="true"
                    android:textAlignment="center">
                </TextView>

            </LinearLayout>


            <Button
                android:id="@+id/btn6L"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orderbtn"
                android:layout_alignParentRight="true"
                android:textColor="@color/icons"
                android:layout_below="@id/canImg"
                android:textAlignment="center"
                android:text="Order Now"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="10dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>