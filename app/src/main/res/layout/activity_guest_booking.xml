<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.fahadkhanashrafi.paniapp.GuestBooking">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking\nGuest"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/icons"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Order Qty-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:enabled="false"
                android:id="@+id/et_liter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Liter"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_add_shopping_cart"
                android:textColor="@color/colorBlack"
                android:drawablePadding="15dp"
                android:layout_margin="10dp"
                android:maxLines="1"
                android:padding="20dp"/>
        </android.support.design.widget.TextInputLayout>
        <!--Order Qty-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/et_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Qty"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_add_shopping_cart"
                android:drawablePadding="15dp"
                android:layout_margin="10dp"
                android:maxLines="1"
                android:padding="20dp"/>
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>
    <!--Rate-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Order Qty-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:enabled="false"
                android:id="@+id/et_Rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rate"
                android:inputType="numberDecimal"
                android:drawableLeft="@drawable/ic_add_shopping_cart"
                android:textColor="@color/colorBlack"
                android:drawablePadding="15dp"
                android:layout_margin="10dp"
                android:maxLines="1"
                android:padding="20dp"/>
        </android.support.design.widget.TextInputLayout>
        <!--Order Qty-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/et_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_add_shopping_cart"
                android:drawablePadding="15dp"
                android:enabled="true"
                android:hint="Total"
                android:text="123"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="20dp"/>
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>
    <!--Name-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="numberDecimal"
            android:drawableLeft="@drawable/ic_person_outline"
            android:drawablePadding="15dp"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>
    <!--Phone No-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone No:"
            android:inputType="numberDecimal"
            android:drawableLeft="@drawable/ic_phone_android"
            android:drawablePadding="15dp"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:padding="20dp"/>
    </android.support.design.widget.TextInputLayout>
    <!--Map LinearLayout-->
